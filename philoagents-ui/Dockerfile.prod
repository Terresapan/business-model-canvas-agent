#
# --- Build Stage ---
#
FROM node:18 AS builder

WORKDIR /app

# Copy package manifests first â€“ improves caching
COPY package*.json ./
RUN npm install

# Copy the rest of the code
COPY . .

# Accept API_URL as build argument
ARG API_URL
ENV API_URL=$API_URL

# Build the production bundle (to /dist)
RUN npm run build


#
# --- Production Stage (Nginx) ---
#
FROM nginx:1.27-alpine

# Copy compiled app to Nginx HTML directory
COPY --from=builder /app/dist /usr/share/nginx/html

# Create a new Nginx config that listens on the port specified by the PORT environment variable
RUN echo "server { \\
    listen \$PORT; \\
    location / { \\
        root   /usr/share/nginx/html; \\
        index  index.html; \\
        try_files \$uri \$uri/ /index.html; \\
    } \\
}" > /etc/nginx/conf.d/default.conf

# The PORT environment variable is automatically provided by Cloud Run.
# Nginx will now listen on this port.
CMD ["nginx", "-g", "daemon off;"]
