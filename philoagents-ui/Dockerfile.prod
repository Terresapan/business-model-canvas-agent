#
# --- Build Stage ---
#
FROM node:18 AS builder

WORKDIR /app

# Copy package manifests first â€“ improves caching
COPY package*.json ./
RUN npm install --production

# Copy the rest of the code
COPY . .

# Accept API_URL as build argument
ARG API_URL
ENV API_URL=$API_URL

# Build the production bundle (to /dist)
RUN npm run build


#
# --- Production Stage (Nginx) ---
#
FROM nginx:1.27-alpine

# Copy compiled app to Nginx HTML directory
COPY --from=builder /app/dist /usr/share/nginx/html

# Replace default Nginx config with a smaller, SPA-optimized one
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Cloud Run listens on $PORT; Nginx defaults to 80
# So expose 8080 and change Nginx config to use it
EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
